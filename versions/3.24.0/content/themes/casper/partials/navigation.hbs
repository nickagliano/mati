{{#if isSecondary}}
    <!-- secondary navigation -->
    <ul class="nav">
        {{#foreach navigation}}
            <li class="nav-{{slug}}">
                 <use xlink:href="#{{slug}}"></use>
            </li>
        {{/foreach}}
    </ul>
{{else}}
    <!-- primary navigation -->
    <ul class="nav">
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}">
                <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{/if}}
